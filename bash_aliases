#enable coloured ls output (was in .bashrc for some reason???)
alias ls='ls --color=auto'
#ls shorthands
alias l='ls'
alias la='ls -a'
alias ll='ls -l'
#mounting devices
alias mntphone='go-mtpfs ~/mnt/phone &'
#make livestreamer use mpv
alias livestreamer='livestreamer -p mpv'
#use my extension of less
alias less='less2'
