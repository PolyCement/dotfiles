#!/usr/bin/env bash

#when trying to less certain file types, list their contents instead
case $1 in
*.zip)
    unzip -l "$1" | less ;;
*.rar)
    unrar l "$1" | less ;;
*.7z)
    7z l "$1" | less ;;
*.bz2)
    tar -jtvf "$1" | less ;;
*.gz)
    tar -ztvf "$1" | less ;;
*)
    if [[ -z "$1" ]]; then
        less
    else
        less "$*"
    fi ;;
esac
